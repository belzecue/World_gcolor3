{
    "app-id": "org.gnome.design.ColorPicker",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-color-picker",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "/share/man"
    ],
    "modules": [
        {
            "name": "libportal",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal.git"
                }
            ]
        },
        {
            "name": "color-picker",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=debugoptimized"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/gcolor3.git"
                }
            ]
        }
    ]
}
